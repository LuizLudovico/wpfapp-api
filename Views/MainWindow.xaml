<Window x:Class="WpfApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:WpfApp.ViewModels"
        xmlns:views="clr-namespace:WpfApp.Views"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="WpfApp - Sistema de Cadastro" Height="650" Width="1000"
        WindowStartupLocation="CenterScreen">
    
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- Logo -->
            <RowDefinition Height="Auto"/>  <!-- Menu -->
            <RowDefinition Height="*"/>     <!-- ConteÃºdo -->
        </Grid.RowDefinitions>

        <!-- Logo Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Logo PNG (temporÃ¡rio - aguardando conversÃ£o real de SVG para PNG) -->
                <!--<Image Grid.Column="0" Source="/Resources/Images/logo.png" Height="40" Margin="0,0,15,0"/>-->
                
                <!-- Logo Texto (temporÃ¡rio atÃ© conversÃ£o vÃ¡lida) -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse Width="40" Height="40" Fill="#3498DB" Margin="0,0,10,0"/>
                    <TextBlock Text="WA" FontSize="20" FontWeight="Bold" Foreground="White" 
                               VerticalAlignment="Center" Margin="-35,0,25,0"/>
                    <StackPanel>
                        <TextBlock Text="WpfApp" FontSize="20" FontWeight="Bold" Foreground="#3498DB"/>
                        <TextBlock Text="Sistema de Cadastro" FontSize="10" Foreground="#BDC3C7" Margin="0,-3,0,0"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- Info Adicional -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBlock Text="v1.0" FontSize="10" Foreground="#95A5A6" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <TextBlock Text="ðŸ“…" FontSize="14" Margin="0,0,5,0" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding Source={x:Static sys:DateTime.Now}, StringFormat='dd/MM/yyyy'}" 
                               FontSize="11" Foreground="#BDC3C7" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Menu Superior -->
        <Border Grid.Row="1" Background="#34495E" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="ðŸ‘¤ Pessoas" 
                        Command="{Binding NavigateToPessoasCommand}"
                        Style="{StaticResource MenuButtonStyle}"/>
                <Button Content="ðŸ“¦ Produtos" 
                        Command="{Binding NavigateToProdutosCommand}"
                        Style="{StaticResource MenuButtonStyle}"/>
                <Button Content="ðŸ“‹ Pedidos" 
                        Command="{Binding NavigateToPedidosCommand}"
                        Style="{StaticResource MenuButtonStyle}"/>
            </StackPanel>
        </Border>

        <!-- Ãrea de ConteÃºdo -->
        <ContentControl Grid.Row="2" Content="{Binding CurrentViewModel}">
            <ContentControl.Resources>
                <DataTemplate DataType="{x:Type vm:PessoaViewModel}">
                    <views:PessoaView/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type vm:ProdutoViewModel}">
                    <views:ProdutoView/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type vm:PedidoViewModel}">
                    <views:PedidoView/>
                </DataTemplate>
            </ContentControl.Resources>
        </ContentControl>
    </Grid>
</Window>

