<Window x:Class="WpfApp.Views.SelecionarPessoaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Selecionar Cliente" Height="400" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="White">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="ðŸ‘¤ Selecione o Cliente" FontSize="18" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,15"/>

        <DataGrid Grid.Row="1" 
                  ItemsSource="{Binding Pessoas}"
                  SelectedItem="{Binding PessoaSelecionada}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  Margin="0,0,0,15">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="*"/>
                <DataGridTextColumn Header="CPF" Binding="{Binding CPF}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancelar" Click="Cancelar_Click"
                    Background="#95A5A6" Foreground="White" Padding="20,10" Margin="0,0,10,0" BorderThickness="0" Cursor="Hand"/>
            <Button Content="Selecionar" Click="Selecionar_Click"
                    Background="#3498DB" Foreground="White" Padding="20,10" BorderThickness="0" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>

